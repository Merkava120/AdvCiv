<?xml version="1.0"?>

<!-- This file is for options related to Dynamica -->

<Civ4Defines xmlns="x-schema:CIV4GlobalDefinesSchema.xml">

	<!-- Set to 1 to have beakers accumulate naturally with the dynamic system; set to 0 to disable this feature -->
	<Define> 
		<DefineName>DYNAMIC_TECHS</DefineName>
		<iDefineIntVal>1</iDefineIntVal>
	</Define>
	
	<!-- beakers accumulated from combat. Base, plus/minus RAND -->
	<Define>
		<DefineName>BEAKERS_FROM_COMBAT</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>BEAKERS_FROM_COMBAT_RAND</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	
	<!-- These are also from combat (same spot as above) but go toward unit upgrades instead of enemy unit requirements. -->
	<Define>
		<DefineName>BEAKERS_FOR_UPGRADE</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>BEAKERS_FOR_UPGRADE_RAND</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	
	<!-- Beakers generated by units on plots, toward improvements and other plot related stuff. -->
	<Define>
		<DefineName>BEAKERS_FROM_PLOT</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>BEAKERS_FROM_PLOT_RAND</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	
	
	
	<!-- SUPER FORTS -->
	<!-- minimum turns a fort is owned before it can be flipped -->
	<Define>
		<DefineName>SUPER_FORTS_DURATION_BEFORE_REVOLT</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	
	
	<!-- set to 1 to disable the dynamic promotion system -->
	<Define>
		<DefineName>DISABLE_DYNAMIC_PROMOTIONS</DefineName>
		<iDefineIntVal>0</iDefineIntVal>
	</Define>
	<!-- can units acquire more than one promotion at a time? -->
	<Define>
		<DefineName>ENABLE_MULTIPLE_PROMOTION_PER_COMBAT</DefineName>
		<iDefineIntVal>0</iDefineIntVal>
	</Define>
	
	<!-- set to 0 for units to be invisible if ANY of their invisible types can NOT be seen (favor invisibility). set to 1 for units to be invisible only if ALL of their invisible types can NOT be seen (favor see invisible) 
	
	
	Side effect: if this is not 0 or 1 it will disable all invisibles / see invisibles. -->
	<Define>
		<DefineName>MULTIPLE_INVISIBLES_RULE</DefineName>
		<iDefineIntVal>0</iDefineIntVal>
	</Define>
	
	
	<!-- MAPPER SETTINGS -->
	<Define>
		<DefineName>ENABLE_MAPPING_SYSTEM</DefineName>
		<iDefineIntVal>1</iDefineIntVal>
	</Define>
	<!-- Use this to set the mapping method. Each digit refers to a single loop through all the tiles. 
	1 = apply terrains,
	2 = apply features, 
	3 = apply improvements,
	4 = apply terrains and features, 
	5 = apply terrains and improvements, 
	6 = apply features and improvements, 
	7 = apply all three. 
	Applied in REVERSE ORDER. 
	-->
	<Define>
		<DefineName>MAPPER_LOOPS</DefineName>
		<iDefineIntVal>321</iDefineIntVal>
	</Define>
	<!-- Chance per 100 that a tile otherwise matching an area will set the area to its channel. This makes it so areas tend toward channels they match the most. Channels will not be reused. -->
	<Define>
		<DefineName>MAPPING_SET_CHANNEL_CHANCE</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<!-- range to place 'groups' in, default 3 -->
	<Define>
		<DefineName>MAPPING_PLACEGROUP_SIZE</DefineName>
		<iDefineIntVal>3</iDefineIntVal>
	</Define>
	
	
	
	<!-- FACTIONS -->
	<Define>
		<DefineName>FACTION_DEFAULT_COHESION</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<!-- number of points in 'aggression' for a faction to be considered 'aggressive' (mostly for classifying them) -->
	<Define>
		<DefineName>AGGRESSIVE_THRESHOLD</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	
</Civ4Defines>
