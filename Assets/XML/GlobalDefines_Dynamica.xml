<?xml version="1.0"?>

<!-- This file is for options related to Dynamica -->

<Civ4Defines xmlns="x-schema:CIV4GlobalDefinesSchema.xml">

	<!-- Set to 1 to have beakers accumulate naturally with the dynamic system; set to 0 to disable this feature -->
	<Define> 
		<DefineName>DYNAMIC_TECHS</DefineName>
		<iDefineIntVal>1</iDefineIntVal>
	</Define>
	
	<!-- beakers accumulated from combat. Base, plus/minus RAND -->
	<Define>
		<DefineName>BEAKERS_FROM_COMBAT</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>BEAKERS_FROM_COMBAT_RAND</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	
	<!-- These are also from combat (same spot as above) but go toward unit upgrades instead of enemy unit requirements. -->
	<Define>
		<DefineName>BEAKERS_FOR_UPGRADE</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>BEAKERS_FOR_UPGRADE_RAND</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	
	<!-- Beakers generated by units on plots, toward improvements and other plot related stuff. -->
	<Define>
		<DefineName>BEAKERS_FROM_PLOT</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>BEAKERS_FROM_PLOT_RAND</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	
	
	
	<!-- SUPER FORTS -->
	<!-- minimum turns a fort is owned before it can be flipped -->
	<Define>
		<DefineName>SUPER_FORTS_DURATION_BEFORE_REVOLT</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	
	
	<!-- set to 1 to disable the dynamic promotion system -->
	<Define>
		<DefineName>DISABLE_DYNAMIC_PROMOTIONS</DefineName>
		<iDefineIntVal>0</iDefineIntVal>
	</Define>
	<!-- can units acquire more than one promotion at a time? -->
	<Define>
		<DefineName>ENABLE_MULTIPLE_PROMOTION_PER_COMBAT</DefineName>
		<iDefineIntVal>0</iDefineIntVal>
	</Define>
	
	<!-- set to 0 for units to be invisible if ANY of their invisible types can NOT be seen (favor invisibility). set to 1 for units to be invisible only if ALL of their invisible types can NOT be seen (favor see invisible) 
	
	
	Side effect: if this is not 0 or 1 it will disable all invisibles / see invisibles. -->
	<Define>
		<DefineName>MULTIPLE_INVISIBLES_RULE</DefineName>
		<iDefineIntVal>0</iDefineIntVal>
	</Define>
	
	
	<!-- MAPPER SETTINGS -->
	<Define>
		<DefineName>ENABLE_MAPPING_SYSTEM</DefineName>
		<iDefineIntVal>1</iDefineIntVal>
	</Define>
	<!-- Use this to set the mapping method. Each digit refers to a single loop through all the tiles. 
	1 = apply terrains,
	2 = apply features, 
	3 = apply improvements,
	4 = apply terrains and features, 
	5 = apply terrains and improvements, 
	6 = apply features and improvements, 
	7 = apply all three. 
	Applied in REVERSE ORDER. 
	-->
	<Define>
		<DefineName>MAPPER_LOOPS</DefineName>
		<iDefineIntVal>321</iDefineIntVal>
	</Define>
	<!-- Chance per 100 that a tile otherwise matching an area will set the area to its channel. This makes it so areas tend toward channels they match the most. Channels will not be reused. -->
	<Define>
		<DefineName>MAPPING_SET_CHANNEL_CHANCE</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<!-- range to place 'groups' in, default 3 -->
	<Define>
		<DefineName>MAPPING_PLACEGROUP_SIZE</DefineName>
		<iDefineIntVal>3</iDefineIntVal>
	</Define>
	
	
	
	<!-- FACTIONS -->
	<Define>
		<DefineName>FACTION_DEFAULT_COHESION</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<!-- number of points in 'aggression' for a faction to be considered 'aggressive' (mostly for classifying them) -->
	<Define>
		<DefineName>AGGRESSIVE_THRESHOLD</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<!-- factions can spawn when a city is captured; if so, they will be this aggressive -->
	<Define>
		<DefineName>CITY_CAPTURE_AGGRESSION</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<!-- if the relevant flavor of a building a faction spawns with is greater than this, the faction will get the relevant focus (wealth or production) -->
	<Define>
		<DefineName>FLAVOR_FOCUS_THRESHOLD</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	<!-- same but for improvements and their yields -->
	<Define>
		<DefineName>YIELD_FOCUS_THRESHOLD</DefineName>
		<iDefineIntVal>3</iDefineIntVal>
	</Define>
	
	<!-- chances to adopt different focuses on spawn: -->
	
	<!-- this one requires having religious focus already, or spawning with a religion that was just barely founded -->
	<Define>
		<DefineName>RELIGION_CONTROL_FOCUS_CHANCE</DefineName>
		<iDefineIntVal>20</iDefineIntVal>
	</Define>
	
	<!-- since most factions spawn with nationalities this is the chance of actually focusing on that -->
	<Define>
		<DefineName>NATIONALITY_FOCUS_CHANCE</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	
	<Define>
		<DefineName>POWER_FOCUS_CHANCE</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>POPULARITY_FOCUS_CHANCE</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>DIPLOMACY_FOCUS_CHANCE</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>WEALTH_FOCUS_CHANCE</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>PRODUCTION_FOCUS_CHANCE</DefineName>
		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	<!-- each of the above gets a boost of this percentage when there is not yet a focus set (but if the focus becomes set the bonus is not applied to further rolls) -->
	<Define>
		<DefineName>NO_FOCUS_BOOST</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	
	<!-- Chance to spawn faction from religion newly spreading -->
	<Define>
		<DefineName>RELIGION_SPREAD_FACTION_CHANCE</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	
	
	<!-- spawning and growing improvements chances -->
	<!-- note everything is out of 1000 for this section -->
	<!-- first one is just how many turns must pass before starting spawning -->
	<Define>
		<DefineName>SPAWN_IMP_MIN_TURNS</DefineName>
		<iDefineIntVal>3</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>SPAWN_IMP_CHANCE_PER_FOOD</DefineName>
		<iDefineIntVal>50</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>SPAWN_IMP_ADD_ROUTE</DefineName>
		<iDefineIntVal>100</iDefineIntVal>
	</Define>
	<!-- will add more later -->
	
	<!-- faction strategy values -->
	<Define>
		<DefineName>FAC_STRATVAL_PER_POP</DefineName>
		<iDefineIntVal>2</iDefineIntVal>
	</Define>
	
	
	
	
	<!-- faction wealth costs for raising popularity -->
	<Define>
		<DefineName>POP_VIA_BLDG_COST</DefineName>
		<iDefineIntVal>15</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>POP_NO_BLDG_COST</DefineName>
		<iDefineIntVal>50</iDefineIntVal>
	</Define>
	
	<!-- if abs(aggression * relationship rank) is greater than this, can't use their buildings to increase popularity (only considers < 0 relationship) -->
	<Define>
		<DefineName>POPULARITY_RELATION_THRESHOLD</DefineName>
		<iDefineIntVal>8</iDefineIntVal>
	</Define>
	<!-- fee charged by other faction per popularity point for using their bldg to increase popularity. divided by 1 + positive relationship rank -->
	<Define>
		<DefineName>FACTION_POP_FEE</DefineName>
		<iDefineIntVal>48</iDefineIntVal>
	</Define>
	<!-- cost for spreading popularity decreases by this much per pop already there ... -->
	<Define>
		<DefineName>POP_COST_DEC_PER_POP</DefineName>
		<iDefineIntVal>1</iDefineIntVal>
	</Define>
	<!-- ... until this limit -->
	<Define>
		<DefineName>POP_NO_MORE_DECREASE</DefineName>
		<iDefineIntVal>10</iDefineIntVal>
	</Define>
	<!-- pop effect is multiplied by this much for beliefs - they are easier to influence -->
	<Define>
		<DefineName>POP_BELIEF_MULT</DefineName>
		<iDefineIntVal>2</iDefineIntVal>
	</Define>
	
	<!-- similarly, costs for spreading a thing (religion, belief, nationality, or faction itself) to another city -->
	<Define>
		<DefineName>SPREAD_COST_BASE</DefineName>
		<iDefineIntVal>25</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>SPREAD_FEE</DefineName>
		<iDefineIntVal>25</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>SPREAD_COST_NO_HUB</DefineName>
		<iDefineIntVal>100</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>SPREAD_COST_PER_DISTANCE</DefineName>
		<iDefineIntVal>2</iDefineIntVal>
	</Define>
	<!-- spread fee is divided by rank + this for positive ranks-->
	<Define>
		<DefineName>SPREAD_FEE_RANK_REDUCE</DefineName>
		<iDefineIntVal>1</iDefineIntVal>
	</Define>
	<!-- extra charged if aggressive -->
	<Define>
		<DefineName>SPREAD_FEE_PER_AGGRESSION</DefineName>
		<iDefineIntVal>3</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>SPREAD_RELATION_THRESHOLD</DefineName>
		<iDefineIntVal>6</iDefineIntVal>
	</Define>
	
</Civ4Defines>
